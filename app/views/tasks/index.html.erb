<h2>All tasks</h2>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to "-- 🗑️", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Vous êtes sûrs?"}  %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a task", tasks_new_path %>
